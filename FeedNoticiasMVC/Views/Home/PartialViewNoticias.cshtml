@model IEnumerable<FeedNoticiasMVC.Models.Noticia>

<div class="container">
    <h3>
        Último acesso ao servidor de noticias:
        @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
    </h3>
    <br />
    Fonte: <a href="@ViewBag.EnderecoFeedNoticias">Noticias.Gov</a>

    @foreach (var item in Model)
    {
        <p>
            <b>
                <a href="@item.Link" class="font alert-info">
                    @item.DataDePublicacao.ToString("dd/MM/yyyy HH:mm:ss") -
                    @item.Titulo;
                </a>
            </b><br />
            @Html.Raw(item.Resumo)
        </p>
    }
</div>
